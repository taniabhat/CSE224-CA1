<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#1C296F"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:background="@color/white"
        android:src="@drawable/ca_book_png"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="207dp"
        android:layout_height="62dp"
        android:text="LPU University"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:gravity="center"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="70dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="372dp"
        android:layout_height="63dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="STUDENT PROFILE"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="164dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="372dp"
        android:layout_height="181dp"
        android:background="@color/white"
        android:src="@drawable/profile"
        android:gravity="center"
        tools:ignore="MissingConstraints"/>

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="text"
        android:gravity="center"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="386dp"
        tools:ignore="MissingConstraints"/>

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Enter Reg no"
        android:inputType="text"
        android:gravity="center"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="444dp"
        tools:ignore="MissingConstraints"/>

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Enter year"
        android:gravity="center"
        android:inputType="text"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="506dp" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Enter e-mail"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="572dp" />

    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Enter Phone no"
        android:gravity="center"
        android:inputType="text|number"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="637dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG OUT"
        android:gravity="center"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="681dp" />


</LinearLayout>
